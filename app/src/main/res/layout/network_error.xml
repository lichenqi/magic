<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    >

    <TextView
        android:id="@+id/warning_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="@string/network_error_warning"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/reloadBtn"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_below="@id/warning_tx"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/reload_btn_bg"
        android:text="@string/reload"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/warning_tx"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/network_error_warning"
        android:src="@drawable/network_bug" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/colorAccent"
        android:visibility="gone"
        />


</RelativeLayout>